{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "seed.ts",
    "generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/migrations"
  ]
}