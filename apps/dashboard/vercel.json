{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --no-workspaces --include=dev",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "@vercel/node@latest",
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://app.bankstatementretriever.com"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/dashboard/overview",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/proxy/(.*)",
      "destination": "https://api.bankstatementretriever.com/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase_url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "NEXT_PUBLIC_API_URL": "@api_url",
    "NEXT_PUBLIC_APP_URL": "@app_url",
    "NEXT_PUBLIC_ENVIRONMENT": "@environment"
  },
  "preview": {
    "alias": ["preview.bankstatementretriever.com"],
    "env": {
      "NEXT_PUBLIC_ENVIRONMENT": "preview"
    }
  },
  "production": {
    "alias": ["app.bankstatementretriever.com"],
    "env": {
      "NEXT_PUBLIC_ENVIRONMENT": "production"
    }
  },
  "crons": []
}